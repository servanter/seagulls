<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.crop.seagulls.dao.DictProductUnitDAO">

	<resultMap id="productUnitMap" type="productUnit">
		<result property="id" column="id" />
		<result property="title" column="title" />
	</resultMap>

	<sql id="base_columns">id, title</sql>
	<select id="getAll" resultMap="productUnitMap">
		SELECT
		<include refid="base_columns" />
		FROM crop_dict_product_unit
	</select>

</mapper>
